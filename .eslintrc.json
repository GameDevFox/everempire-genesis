{
  "root": true,
  "env": {
    "node": true
  },
  "extends": "xo-space/esnext",
  "parser": "babel-eslint",
  "rules": {
    "capitalized-comments": "off",
    "curly": "off",
    "keyword-spacing": ["error", {
      "overrides": {
        "for": { "after": false },
        "if": { "after": false },
        "switch": { "after": false },
        "while": { "after": false }
      }
    }],
    "new-cap": "off",
    "object-curly-spacing": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}
